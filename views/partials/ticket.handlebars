<div class="ticket" draggable="true" data-id="{{id}}"{{#if tags.length}} style="border-left-color: {{tags.[0].color}}"{{/if}}>
  <div class="ticket-title">
    <a href="javascript:void(0)" onclick="openTicketPanel({{id}})">{{title}}</a>
  </div>
  {{#if tags.length}}
    <div class="ticket-tags">
      {{#each tags}}
        <span class="tag" style="background-color: {{color}}">{{name}}</span>
      {{/each}}
    </div>
  {{/if}}
</div>
